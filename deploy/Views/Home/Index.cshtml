@model List<TwitterFollower.Domain.Tweet>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Who</th>
                    <th>What</th>
                    <th>When</th>
                    <th>Where</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null
                    && Model.Any())
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Who</td>
                            <td>@Model[i].What</td>
                            <td>@Model[i].When</td>
                            <td>@Model[i].Where</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>


</div>